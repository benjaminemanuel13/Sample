<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:AgentDesigner.UI.ViewModels"
             x:Class="AgentDesigner.UI.Views.ModelDesignerView"
             x:Name="ModelPage">
    
    <Grid ColumnDefinitions="*, 300">
        <!-- Canvas Area -->
        <Grid Grid.Column="0">
            <GraphicsView x:Name="ModelCanvas"
                          Drawable="{Binding .}"
                          StartInteraction="OnCanvasStartInteraction"
                          DragInteraction="OnCanvasDragInteraction"
                          EndInteraction="OnCanvasEndInteraction"/>
            
            <!-- Floating Toolbar -->
            <HorizontalStackLayout VerticalOptions="Start" HorizontalOptions="Center" Margin="0,20,0,0" Spacing="10" BackgroundColor="White" Padding="10" HeightRequest="60">
                <HorizontalStackLayout.Shadow>
                    <Shadow Brush="Black" Offset="2,2" Radius="5" Opacity="0.2"/>
                </HorizontalStackLayout.Shadow>
                
                <Button Text="Add Entity" Command="{Binding AddEntityCommand}" BackgroundColor="{StaticResource Primary}" TextColor="White"/>
                <Button Text="Delete Selected" Command="{Binding DeleteEntityCommand}" BackgroundColor="{StaticResource Secondary}" TextColor="Black"/>
            </HorizontalStackLayout>
        </Grid>

        <!-- Properties Panel -->
        <Border Grid.Column="1" Stroke="LightGray" StrokeThickness="1" BackgroundColor="White">
            <ScrollView>
                <VerticalStackLayout Padding="15" Spacing="15">
                    <Label Text="Entity Properties" FontSize="18" FontAttributes="Bold" TextColor="{StaticResource Gray900}"/>

                    <!-- No Selection State -->
                    <VerticalStackLayout IsVisible="{Binding IsNotEntitySelected}" Spacing="10">
                        <Label Text="Select an entity to edit properties" TextColor="{StaticResource Gray600}" HorizontalOptions="Center"/>
                        <BoxView HeightRequest="1" Color="{StaticResource Gray300}"/>
                        
                        <Label Text="Model Info" FontSize="14" FontAttributes="Bold" Margin="0,10,0,0"/>
                        <Label Text="Model Name"/>
                        <Entry Text="{Binding CurrentModel.Name}" BackgroundColor="White" TextColor="Black"/>
                    </VerticalStackLayout>

                    <!-- Entity Selected State -->
                    <VerticalStackLayout IsVisible="{Binding IsEntitySelected}" Spacing="10">
                        <!-- Entity Name -->
                        <Label Text="Entity Name" FontSize="12" TextColor="{StaticResource Gray600}"/>
                        <Entry Text="{Binding SelectedEntityName}" BackgroundColor="White" TextColor="Black"/>

                        <!-- Description -->
                        <Label Text="Description" FontSize="12" TextColor="{StaticResource Gray600}"/>
                        <Editor Text="{Binding SelectedEntityDescription}" HeightRequest="80" BackgroundColor="White" TextColor="Black"/>

                        <BoxView HeightRequest="1" Color="{StaticResource Gray300}" Margin="0,10"/>

                        <!-- Properties List Management -->
                        <Label Text="Properties" FontSize="14" FontAttributes="Bold"/>
                        
                        <!-- TODO: List of properties would go here with Add/Remove buttons. 
                             For now, just a button stub as complex list editing in MAUI requires CollectionView with templated items. -->
                         <Button Text="Add Property" Command="{Binding AddPropertyCommand}" />
                         <Label Text="(Property editing allows adding generic string props for now)" FontSize="10" TextColor="Gray"/>
                    </VerticalStackLayout>
                </VerticalStackLayout>
            </ScrollView>
        </Border>
    </Grid>
</ContentPage>
