<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:AgentDesigner.UI.ViewModels"
             x:Class="AgentDesigner.UI.Views.MainView"
             x:DataType="vm:MainViewModel"
             x:Name="MainPage"
             Title="AI Agent Workflow Designer">

    <Grid>
        <!-- Main View -->
        <Grid IsVisible="{Binding IsMainViewVisible}"
              RowDefinitions="Auto,*,Auto">
            <!-- Menu Bar -->
            <Grid Grid.Row="0" Padding="10" BackgroundColor="{StaticResource Primary}">
                <HorizontalStackLayout Spacing="10">
                    <Button Text="New Project" 
                            Command="{Binding NewProjectCommand}"
                            BackgroundColor="{StaticResource Secondary}"
                            TextColor="White"/>
                    <Button Text="Open Project" 
                            Command="{Binding OpenProjectCommand}"
                            BackgroundColor="{StaticResource Secondary}"
                            TextColor="White"/>
                    <Button Text="Save Project" 
                            Command="{Binding SaveProjectCommand}"
                            BackgroundColor="{StaticResource Secondary}"
                            TextColor="White"/>
                    <BoxView WidthRequest="2" 
                             BackgroundColor="White" 
                             Opacity="0.5"
                             Margin="5,0"/>
                    <Button Text="New Workflow" 
                            Command="{Binding NewWorkflowCommand}"
                            BackgroundColor="{StaticResource Tertiary}"
                            TextColor="White"/>
                </HorizontalStackLayout>
            </Grid>

            <!-- Main Content Area -->
            <Grid Grid.Row="1" Padding="10" ColumnDefinitions="200,*">
                <!-- Left Sidebar - Project Explorer -->
                <Border Grid.Column="0" 
                        Stroke="{StaticResource Gray300}"
                        StrokeThickness="1"
                        Margin="0,0,5,0">
                    <VerticalStackLayout Padding="10" Spacing="10">
                        <Label Text="Project Explorer" 
                               FontSize="16" 
                               FontAttributes="Bold"/>
                        
                        <Label Text="{Binding CurrentProject.Name, TargetNullValue='No project loaded'}"
                               FontSize="14"/>
                        
                        <Label Text="Workflows" 
                               FontSize="14" 
                               FontAttributes="Bold"
                               Margin="0,10,0,0"/>
                        <Label Text="{Binding CurrentProject.Workflows.Count, StringFormat='{0} workflows', TargetNullValue='0 workflows'}"
                               FontSize="12"
                               TextColor="{StaticResource Gray600}"/>
                    </VerticalStackLayout>
                </Border>

                <!-- Main Content - Placeholder -->
                <Border Grid.Column="1" 
                        Stroke="{StaticResource Gray300}"
                        StrokeThickness="1"
                        Margin="5,0,0,0">
                    <VerticalStackLayout Padding="20" 
                                         VerticalOptions="Center" 
                                         HorizontalOptions="Center">
                        <Label Text="Welcome to AI Agent Workflow Designer" 
                               FontSize="24" 
                               FontAttributes="Bold"
                               HorizontalOptions="Center"/>
                        <Label Text="Create a new project or open an existing one to get started" 
                               FontSize="16"
                               Margin="0,10,0,0"
                               HorizontalOptions="Center"
                               TextColor="{StaticResource Gray600}"/>
                    </VerticalStackLayout>
                </Border>
            </Grid>

            <!-- Status Bar -->
            <Border Grid.Row="2" 
                    BackgroundColor="{StaticResource Gray200}"
                    Padding="10,5">
                <Label Text="{Binding StatusMessage}" 
                       FontSize="12"
                       TextColor="{StaticResource Gray900}"/>
            </Border>
        </Grid>

        <!-- Workflow Designer View -->
        <Grid IsVisible="{Binding ShowWorkflowDesigner}"
              ColumnDefinitions="80,*">
            
            <!-- Left Toolbar Menu -->
            <Border Grid.Column="0" 
                    BackgroundColor="{StaticResource Primary}"
                    StrokeThickness="0">
                <ScrollView>
                    <VerticalStackLayout Spacing="20" Padding="0,20">
                        
                        <!-- Back Button -->
                        <VerticalStackLayout Spacing="5" BackgroundColor="Transparent">
                            <VerticalStackLayout.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding CloseWorkflowDesignerCommand}"/>
                            </VerticalStackLayout.GestureRecognizers>
                            <Label Text="&#xE72B;" 
                                   FontFamily="Segoe MDL2 Assets" 
                                   FontSize="24" 
                                   HorizontalOptions="Center" 
                                   TextColor="White"/>
                            <Label Text="Back" 
                                   FontSize="11" 
                                   HorizontalOptions="Center" 
                                   TextColor="White"/>
                        </VerticalStackLayout>

                        <!-- Compile Button -->
                        <VerticalStackLayout Spacing="5" BackgroundColor="Transparent">
                            <VerticalStackLayout.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding WorkflowDesigner.CompileWorkflowCommand}"/>
                            </VerticalStackLayout.GestureRecognizers>
                            <Label Text="&#xE70F;" 
                                   FontFamily="Segoe MDL2 Assets" 
                                   FontSize="24" 
                                   HorizontalOptions="Center" 
                                   TextColor="White"/>
                            <Label Text="Compile" 
                                   FontSize="11" 
                                   HorizontalOptions="Center" 
                                   TextColor="White"/>
                        </VerticalStackLayout>
                        
                        <BoxView HeightRequest="1" Color="White" Opacity="0.2" Margin="10,0"/>

                        <!-- Add Agent -->
                        <VerticalStackLayout Spacing="5" BackgroundColor="Transparent">
                            <VerticalStackLayout.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding WorkflowDesigner.AddAgentNodeCommand}"/>
                            </VerticalStackLayout.GestureRecognizers>
                            <Label Text="&#xE77B;" 
                                   FontFamily="Segoe MDL2 Assets" 
                                   FontSize="24" 
                                   HorizontalOptions="Center" 
                                   TextColor="White"/>
                            <Label Text="Agent" 
                                   FontSize="11" 
                                   HorizontalOptions="Center" 
                                   TextColor="White"/>
                        </VerticalStackLayout>
                        
                        <!-- Add Decision -->
                        <VerticalStackLayout Spacing="5" BackgroundColor="Transparent">
                            <VerticalStackLayout.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding WorkflowDesigner.AddDecisionNodeCommand}"/>
                            </VerticalStackLayout.GestureRecognizers>
                            <Label Text="&#xE8A1;" 
                                   FontFamily="Segoe MDL2 Assets" 
                                   FontSize="24" 
                                   HorizontalOptions="Center" 
                                   TextColor="White"/>
                            <Label Text="Decision" 
                                   FontSize="11" 
                                   HorizontalOptions="Center" 
                                   TextColor="White"/>
                        </VerticalStackLayout>
                        
                        <!-- Add Switch -->
                        <VerticalStackLayout Spacing="5" BackgroundColor="Transparent">
                            <VerticalStackLayout.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding WorkflowDesigner.AddSwitchNodeCommand}"/>
                            </VerticalStackLayout.GestureRecognizers>
                            <Label Text="&#xE9F5;" 
                                   FontFamily="Segoe MDL2 Assets" 
                                   FontSize="24" 
                                   HorizontalOptions="Center" 
                                   TextColor="White"/>
                            <Label Text="Switch" 
                                   FontSize="11" 
                                   HorizontalOptions="Center" 
                                   TextColor="White"/>
                        </VerticalStackLayout>

                        <!-- Add Input -->
                        <VerticalStackLayout Spacing="5" BackgroundColor="Transparent">
                            <VerticalStackLayout.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding WorkflowDesigner.AddInputNodeCommand}"/>
                            </VerticalStackLayout.GestureRecognizers>
                            <Label Text="&#xE896;" 
                                   FontFamily="Segoe MDL2 Assets" 
                                   FontSize="24" 
                                   HorizontalOptions="Center" 
                                   TextColor="White"/>
                            <Label Text="Input" 
                                   FontSize="11" 
                                   HorizontalOptions="Center" 
                                   TextColor="White"/>
                        </VerticalStackLayout>
                        
                        <!-- Add Output -->
                        <VerticalStackLayout Spacing="5" BackgroundColor="Transparent">
                            <VerticalStackLayout.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding WorkflowDesigner.AddOutputNodeCommand}"/>
                            </VerticalStackLayout.GestureRecognizers>
                            <Label Text="&#xE898;" 
                                   FontFamily="Segoe MDL2 Assets" 
                                   FontSize="24" 
                                   HorizontalOptions="Center" 
                                   TextColor="White"/>
                            <Label Text="Output" 
                                   FontSize="11" 
                                   HorizontalOptions="Center" 
                                   TextColor="White"/>
                        </VerticalStackLayout>
                        
                        <BoxView HeightRequest="1" Color="White" Opacity="0.2" Margin="10,0"/>

                        <!-- Delete -->
                        <VerticalStackLayout Spacing="5" BackgroundColor="Transparent">
                            <VerticalStackLayout.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding WorkflowDesigner.DeleteNodeCommand}"/>
                            </VerticalStackLayout.GestureRecognizers>
                            <Label Text="&#xE74D;" 
                                   FontFamily="Segoe MDL2 Assets" 
                                   FontSize="24" 
                                   HorizontalOptions="Center" 
                                   TextColor="White"/>
                            <Label Text="Delete" 
                                   FontSize="11" 
                                   HorizontalOptions="Center" 
                                   TextColor="White"/>
                        </VerticalStackLayout>

                        <!-- Node Count -->
                        <Label Text="{Binding WorkflowDesigner.Nodes.Count, StringFormat='{0} Nodes'}" 
                               FontSize="10" 
                               HorizontalOptions="Center" 
                               TextColor="White"
                               Opacity="0.7"/>

                    </VerticalStackLayout>
                </ScrollView>
            </Border>

            <!-- Main Canvas Area -->
            <Grid Grid.Column="1" ColumnDefinitions="*,300">
                <Border Grid.Column="0" 
                        Stroke="{StaticResource Gray300}"
                        StrokeThickness="1"
                        BackgroundColor="White">
                    <GraphicsView x:Name="WorkflowCanvas"
                                  BackgroundColor="#F8F9FA"
                                  Drawable="{Binding WorkflowDesigner}" />
                </Border>
                
                <!-- Properties Panel -->
                <Border Grid.Column="1" 
                        Stroke="{StaticResource Gray300}"
                        StrokeThickness="1"
                        BackgroundColor="{StaticResource Gray100}"
                        Margin="5,0,0,0"
                        IsVisible="{Binding WorkflowDesigner.IsNodeSelected}">
                    <ScrollView>
                        <VerticalStackLayout Padding="15" Spacing="15" BindingContext="{Binding WorkflowDesigner.SelectedNode}">
                            <Label Text="Properties" 
                                   FontSize="16" 
                                   FontAttributes="Bold"
                                   TextColor="{StaticResource Gray900}"/>
                            
                            <BoxView HeightRequest="1" Color="{StaticResource Gray300}"/>
                            
                            <VerticalStackLayout Spacing="5">
                                <Label Text="Name" FontSize="12" TextColor="{StaticResource Gray600}"/>
                                <Entry Text="{Binding Name, Mode=TwoWay}" 
                                       BackgroundColor="White"
                                       TextColor="Black"/>
                            </VerticalStackLayout>
                            
                             <VerticalStackLayout Spacing="5">
                                <Label Text="Type" FontSize="12" TextColor="{StaticResource Gray600}"/>
                                <Label Text="{Binding NodeType}" 
                                       FontAttributes="Bold"
                                       TextColor="{StaticResource Gray900}"/>
                            </VerticalStackLayout>
                            
                            <Grid ColumnDefinitions="*,*">
                                <VerticalStackLayout Spacing="5" Grid.Column="0">
                                    <Label Text="X" FontSize="12" TextColor="{StaticResource Gray600}"/>
                                    <Label Text="{Binding X, StringFormat='{0:F0}'}" 
                                           TextColor="{StaticResource Gray900}"/>
                                </VerticalStackLayout>
                                <VerticalStackLayout Spacing="5" Grid.Column="1">
                                    <Label Text="Y" FontSize="12" TextColor="{StaticResource Gray600}"/>
                                    <Label Text="{Binding Y, StringFormat='{0:F0}'}" 
                                           TextColor="{StaticResource Gray900}"/>
                                </VerticalStackLayout>
                            </Grid>
                            
                            <!-- Agent Selection (Visible for AgentNode) -->
                            <VerticalStackLayout Spacing="5" IsVisible="False">
                                <VerticalStackLayout.Triggers>
                                    <DataTrigger TargetType="VerticalStackLayout" Binding="{Binding NodeType}" Value="AgentNode">
                                        <Setter Property="IsVisible" Value="True" />
                                    </DataTrigger>
                                </VerticalStackLayout.Triggers>
                                <Label Text="Agent Template" FontSize="12" TextColor="{StaticResource Gray600}"/>
                                <Picker Title="Select Agent"
                                        ItemsSource="{Binding Source={x:Reference MainPage}, Path=BindingContext.WorkflowDesigner.AvailableAgents}"
                                        SelectedItem="{Binding Source={x:Reference MainPage}, Path=BindingContext.WorkflowDesigner.SelectedAgentItem}"
                                        ItemDisplayBinding="{Binding Name}"
                                        BackgroundColor="White"
                                        TextColor="Black"/>
                            </VerticalStackLayout>

                            <!-- Input Selection (Visible for InputNode) -->
                            <VerticalStackLayout Spacing="5" IsVisible="False">
                                <VerticalStackLayout.Triggers>
                                    <DataTrigger TargetType="VerticalStackLayout" Binding="{Binding NodeType}" Value="InputNode">
                                        <Setter Property="IsVisible" Value="True" />
                                    </DataTrigger>
                                </VerticalStackLayout.Triggers>
                                <Label Text="Input Type" FontSize="12" TextColor="{StaticResource Gray600}"/>
                                <Picker Title="Select Input Type"
                                        ItemsSource="{Binding Source={x:Reference MainPage}, Path=BindingContext.WorkflowDesigner.AvailableInputNodes}"
                                        SelectedItem="{Binding Source={x:Reference MainPage}, Path=BindingContext.WorkflowDesigner.SelectedInputItem}"
                                        ItemDisplayBinding="{Binding Name}"
                                        BackgroundColor="White"
                                        TextColor="Black"/>
                            </VerticalStackLayout>
                            
                            <VerticalStackLayout Spacing="5" IsVisible="False">
                                <VerticalStackLayout.Triggers>
                                    <DataTrigger TargetType="VerticalStackLayout" Binding="{Binding NodeType}" Value="DecisionNode">
                                        <Setter Property="IsVisible" Value="True" />
                                    </DataTrigger>
                                </VerticalStackLayout.Triggers>
                                <Label Text="Condition" FontSize="12" TextColor="{StaticResource Gray600}"/>
                                <Editor Text="{Binding ConditionExpression, Mode=TwoWay}" 
                                        AutoSize="TextChanges"
                                        BackgroundColor="White"
                                        TextColor="Black"/>
                            </VerticalStackLayout>

                            <!-- Switch Configuration (Visible for SwitchNode) -->
                            <VerticalStackLayout Spacing="5" IsVisible="False">
                                <VerticalStackLayout.Triggers>
                                    <DataTrigger TargetType="VerticalStackLayout" Binding="{Binding NodeType}" Value="SwitchNode">
                                        <Setter Property="IsVisible" Value="True" />
                                    </DataTrigger>
                                </VerticalStackLayout.Triggers>
                                <Label Text="Output Count" FontSize="12" TextColor="{StaticResource Gray600}"/>
                                <Grid ColumnDefinitions="*,Auto">
                                    <Stepper Grid.Column="0" 
                                             Minimum="2" 
                                             Maximum="10" 
                                             Increment="1"
                                             Value="{Binding OutputCount, Mode=TwoWay}"
                                             BackgroundColor="White"
                                             ValueChanged="OnOutputCountChanged"/>
                                    <Label Grid.Column="1" 
                                           Text="{Binding OutputCount}" 
                                           VerticalOptions="Center" 
                                           HorizontalOptions="Center"
                                           TextColor="Black"
                                           WidthRequest="30"/>
                                </Grid>
                            </VerticalStackLayout>

                             <VerticalStackLayout Spacing="5">
                                <Label Text="Description" FontSize="12" TextColor="{StaticResource Gray600}"/>
                                <Editor Text="{Binding Description, Mode=TwoWay}" 
                                        AutoSize="TextChanges"
                                        BackgroundColor="White"
                                        TextColor="Black"/>
                            </VerticalStackLayout>
                            
                        </VerticalStackLayout>
                    </ScrollView>
                </Border>

                <!-- No Selection Placeholder -->
                <Border Grid.Column="1" 
                        Stroke="{StaticResource Gray300}"
                        StrokeThickness="1"
                        BackgroundColor="{StaticResource Gray100}"
                        Margin="5,0,0,0"
                        IsVisible="{Binding WorkflowDesigner.IsNotNodeSelected}">
                     <VerticalStackLayout VerticalOptions="Center" HorizontalOptions="Center" Spacing="10">
                        <Label Text="No Selection" 
                               FontSize="16" 
                               TextColor="{StaticResource Gray500}"/>
                        <Label Text="Select a node to edit properties" 
                               FontSize="12" 
                               TextColor="{StaticResource Gray500}"
                               HorizontalTextAlignment="Center"/>
                     </VerticalStackLayout>
                </Border>
            </Grid>
        </Grid>
    </Grid>

</ContentPage>
