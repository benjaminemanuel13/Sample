<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="AgentDesigner.UI.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:AgentDesigner.UI.Views"
    Shell.FlyoutBehavior="Disabled">

    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:MainView}"
        Route="MainView" />

    <ShellContent
        Title="Workflow Designer"
        ContentTemplate="{DataTemplate local:WorkflowDesignerView}"
        Route="WorkflowDesigner" />

</Shell>
